{% extends 'base.html.twig' %}

{% block body %}

    {% form_theme form 'Form/bootstrap_3_horizontal_layout.html.twig' %}

    <div clas="row">
        <div class="col-md-12">
            <div class="panel panel-default">
                <!-- Default panel contents -->
                <div class="panel-heading"><b>Order: {{ order.referenceOrderId }}</b></div>
                <!-- Table -->
                <table class="table table-bordered table-hover">
                    <theader class="center">
                        <th>Status</th>
                        <th>Shipping method</th>
                        <th>Tracking number</th>
                        <th>Total</th>
                        <th>Recipient</th>
                        <th>Address</th>
                        <th>City</th>
                        <th>State</th>
                        <th>Zip code</th>
                        <th>Phone</th>
                    </theader>
                        <tr>
                                <td>{{ order.getStatus() }}</td>
                                <td>{{ order.getRequestShippingMethod() }}</td>
                                <td>{{ order.getShipmentTrackingNumber() }}</td>
                                <td>${{ order.basePrice }}</td>
                                <td>{{ order.getRecipientName() }}</td>
                                <td>{{ order.getAddressLine() }}</td>
                                <td>{{ order.getAddressCity() }}</td>
                                <td>{{ order.getAddressState() }}</td>
                                <td>{{ order.getAddressZipCode() }}</td>
                                <td>{{ order.getRecipientPhoneNumber() }}</td>
                        </tr>
                </table>
            </div>

            <div class="panel panel-default">
                <!-- Default panel contents -->
                <div class="panel-heading">Items:</div>
                <!-- Table -->
                <table class="table table-bordered table-hover">
                    <theader class="center">
                        <th>Id</th>
                        <th>Title</th>
                        <th>Price</th>
                        <th>Shipping cost</th>
                        <th>Quantity</th>
                        <th>Merchant SKU</th>
                        <th>Action</th>
                    </theader>
                    {% for item in items %}
                        <tr>
                            <td>{{ item.getId() }}</td>
                            <td>{{ item.getTitle() }}</td>
                            <td>${{ item.getPrice() }}</td>
                            <td>{{ item.getShippingCost() }}</td>
                            <td align="center">
                                <select class="form-control error" id="select-quantity" data-item-id="{{ item.getId() }}" data-order-id="{{ order.getId() }}">
                                    {% for value in item.getSelectValues %}
                                        {% if(value == item.getSelectedValue()) %}
                                            <option selected>{{ value }}</option>
                                        {% else %}
                                            <option>{{ value }}</option>
                                        {% endif %}
                                    {% endfor %}
                                </select>
                            </td>
                            <td>{{ item.getMerchantSku() }}</td>
                            <td align="center"><button type="button" class="btn btn-default" id="button-save">Save</button></td>
                        </tr>
                    {% endfor %}
                </table>
            </div>

            <div class="btn-group pull-right">
                {% if(order.getShipmentTrackingNumber()) %}
                    <button type="button" class="btn btn-default disabled" style="width: 170px" id="ship-order">Ship Order</button>
                {% else %}
                    <button type="button" class="btn btn-default" style="width: 170px" id="ship-order">Ship Order</button>
                {% endif %}

                <button type="button" class="btn btn-info approve-order" data-status-id="{{ statuses[0].getId() }}" style="width: 170px">Accepted</button>
                <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown">
                    <span class="caret"></span>
                </button>
                <ul class="dropdown-menu" role="menu">
                    {% for status in statuses %}
                        <li class="approve-order" data-status-id="{{ status.getId() }}"><a href="#">{{ status.getTitle() }}</a></li>
                    {% endfor %}
                </ul>

                <button type="button" class="btn btn-warning" style="width: 170px" id="cancel-order">Cancel Order</button>
            </div>
        </div>

        <div class="col-md-7" style="display: none;" id="order-form">
            <div class="panel panel-default">
                <div class="panel-heading">Ship order form:</div>
                {{ form_start(form) }}
                {{ form_widget(form) }}
                {{ form_end(form) }}
            </div>
        </div>
    </div>

{% endblock %}

{% block stylesheets %}

{% endblock %}

{% block javascripts %}
    <script type="text/javascript" src="{{ asset('js/order.js') }}"></script>
{% endblock %}
