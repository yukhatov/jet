{% extends 'base.html.twig' %}

{% block body %}

    <div clas="row">
        <div class="col-md-12">
            <div class="panel panel-default">
                <!-- Default panel contents -->
                <div class="panel-heading">Order:</div>
                <!-- Table -->
                <table class="table table-bordered table-hover">
                    <theader class="center">
                        <th>Id</th>
                        <th>Status</th>
                        <th>Shipping method</th>
                        <th>Recipient</th>
                        <th>Phone</th>
                        <th>Address</th>
                        <th>City</th>
                        <th>State</th>
                        <th>Zip code</th>
                    </theader>
                        <tr>
                                <td>{{ order.getId() }}</td>
                                <td>{{ order.getStatus() }}</td>
                                <td>{{ order.getRequestShippingMethod() }}</td>
                                <td>{{ order.getRecipientName() }}</td>
                                <td>{{ order.getRecipientPhoneNumber() }}</td>
                                <td>{{ order.getAddressLine() }}</td>
                                <td>{{ order.getAddressCity() }}</td>
                                <td>{{ order.getAddressState() }}</td>
                                <td>{{ order.getAddressZipCode() }}</td>
                        </tr>
                </table>
            </div>

            <div class="panel panel-default">
                <!-- Default panel contents -->
                <div class="panel-heading">Items:</div>
                <!-- Table -->
                <table class="table table-bordered table-hover">
                    <theader class="center">
                        <th>Id</th>
                        <th>Title</th>
                        <th>Price</th>
                        <th>Shipping cost</th>
                        <th>Quantity</th>
                        <th>Merchant SKU</th>
                        <th>Action</th>
                    </theader>
                    {% for item in items %}
                        <tr>
                            <td>{{ item.getId() }}</td>
                            <td>{{ item.getTitle() }}</td>
                            <td>{{ item.getPrice() }}</td>
                            <td>{{ item.getShippingCost() }}</td>
                            <td align="center">
                                <select class="form-control error" id="select-quantity" data-item-id="{{ item.getId() }}" data-order-id="{{ order.getId() }}">
                                    {% for value in item.getSelectValues %}
                                        {% if(value == item.getSelectedValue())%}
                                            <option selected>{{ value }}</option>
                                        {% else %}
                                            <option>{{ value }}</option>
                                        {% endif %}
                                    {% endfor %}
                                </select>
                            </td>
                            <td>{{ item.getMerchantSku() }}</td>
                            <td align="center"><button type="button" class="btn btn-default" id="button-save">Save</button></td>
                        </tr>
                    {% endfor %}
                </table>
            </div>
        </div>
    </div>

{% endblock %}

{% block stylesheets %}

{% endblock %}

{% block javascripts %}
    <script type="text/javascript" src="{{ asset('js/order.js') }}"></script>
{% endblock %}
