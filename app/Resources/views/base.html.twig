<!DOCTYPE html>

<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Jet{% endblock %}</title>
        <link rel="icon" type="image/x-icon" href="{{ asset('jetIcon.png') }}" />
        <link href="https://fonts.googleapis.com/css?family=Open+Sans:400,600,700" rel="stylesheet" />
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" />
        {% block stylesheets %}{% endblock %}
        <link rel="stylesheet" href="{{ asset('/css/font-awesome.min.css') }}" />
        <link rel="stylesheet" href="{{ asset('/css/style.min.css') }}" />
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>
        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
        {#<script src="{{ asset('bundles/fosjsrouting/js/router.js') }}"></script>#}
        <script type="text/javascript" src="{{ asset('js/router.js') }}"></script>
        <script src="{{ path('fos_js_routing_js', { callback: 'fos.Router.setData' }) }}"></script>
    </head>
    <body>
        {% block body %}
            <div id="wrapper">
                <div id="container">
                    <nav class="navbar navbar-default">
                        <div class="container-fluid">
                            <!-- Brand and toggle get grouped for better mobile display -->
                            <div class="navbar-header">
                                <a class="navbar-brand" href="{{ path('homepage') }}">JET</a>
                            </div>

                            <!-- Collect the nav links, forms, and other content for toggling -->
                            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">

                                <ul class="nav navbar-nav">

                                    <li {% if activeTab|default('') == 'inventory' %} class="active"{% endif %} >
                                        <a href="{{ path('inventory') }}"><i class="fa fa-lg fa-shopping-bag" aria-hidden="true"></i>Inventory</a>
                                    </li>
                                    <li {% if activeTab|default('') == 'providers' %} class="active"{% endif %} >
                                        <a href="{{ path('providers') }}"><i class="fa fa-lg fa-users" aria-hidden="true"></i>Providers</a>
                                    </li>
                                    <li {% if activeTab|default('') == 'orders' %} class="active"{% endif %} >
                                        <a href="{{ path('orders') }}"><i class="fa fa-lg fa-shopping-cart" aria-hidden="true"></i>Orders</a>
                                    </li>
                                    <li {% if activeTab|default('') == 'returns' %} class="active"{% endif %} >
                                        <a href="{{ path('returns') }}"><i class="fa fa-lg fa-reply" aria-hidden="true"></i>Returns</a>
                                    </li>
                                    <li {% if activeTab|default('') == 'reports' %} class="active dropdown"{% else %} class="dropdown" {% endif %}>
                                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"><i class="fa fa-lg fa-file" aria-hidden="true"></i>Reports<span class="caret"></span></a>
                                        <ul class="dropdown-menu">
                                            <li><a href="{{ path('instock') }}">Instock</a></li>
                                            <li><a href="{{ path('afs') }}">Available for sale</a></li>
                                            <li><a href="{{ path('ordersReport') }}">Orders report</a></li>
                                        </ul>
                                    </li>

                                </ul>
                                {#<form class="navbar-form navbar-right">
                                    <div class="form-group">
                                        <input type="text" class="form-control" placeholder="Search">
                                    </div>
                                    <button type="submit" class="btn btn-default">Submit</button>
                                </form>#}
                                <ul class="nav navbar-nav navbar-right">
                                    <li class="dropdown">
                                    </li>
                                </ul>
                            </div><!-- /.navbar-collapse -->
                        </div><!-- /.container-fluid -->
                    </nav>
                </div>
            </div>
        {% endblock %}
        {% block footer %}
        {% endblock %}
        {% block javascripts %}{% endblock %}
    </body>
</html>